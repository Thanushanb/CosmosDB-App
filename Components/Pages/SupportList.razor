@page "/support"
@using SupportApp.Models
@inject HttpClient Http
@inject NavigationManager Navigation

<h1>Supporthenvendelser</h1>

@if (_items is null)
{
    <p>Indl√¶ser...</p>
}
else if (_items.Count == 0)
{
    <p>Ingen henvendelser endnu.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Category</th>
            <th>Message</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var x in _items)
        {
            <tr>
                <td data-label="Navn">@x.CustomerName</td>
                <td data-label="Email">@x.Email</td>
                <td data-label="Emne">@x.Category</td>
                <td data-label="Besked">@x.Message</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<SupportMessage>? _items;

    protected override async Task OnInitializedAsync()
    {
        var baseUrl = Navigation.BaseUri;
        _items = await Http.GetFromJsonAsync<List<SupportMessage>>($"{baseUrl}SupportMessages");
    }
}